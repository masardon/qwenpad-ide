<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android" id="com.foxdebug.qwenpad.sshmanager" version="1.0.0">
    <name>QwenPad SSH Manager</name>
   
    <js-module name="SSHManager" src="www/sshmanager.js">
        <clobbers target="window.SSHManager" />
    </js-module>

    <platform name="android">
        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="SSHManager">
                <param name="android-package" value="com.foxdebug.qwenpad.sshmanager.SSHManager" />
            </feature>
        </config-file>
        <config-file parent="/*" target="AndroidManifest.xml" />
        
        <source-file src="src/android/SSHManager.java" target-dir="src/com/foxdebug/qwenpad/sshmanager" />
    </platform>
</plugin>